.field__title--radius {
  padding-bottom: 20rpx;
}

.popup-field-example--bottom {
  width: 100%;
  height: 300rpx;
}

.picker-view-example {
  height: 240rpx;
}

.picker-view-column-example {
  line-height: 100rpx;
  text-align: center;
}

.form_input {
  width: 100%;
  height: 120rpx;
  border-bottom: solid 1px #ff6500;
  border-top: none;
  padding-top: 40rpx;
}

.form_subbtn {
  padding-top: 40rpx;
  width: 100%;
  height: 100rpx;
}

.subbtn {
  width: 600rpx;
  /* height: 46px; */
  border-radius: 60rpx;
}

.form_input label {
  float: left;
  font-size: 48rpx;
  line-height: 80rpx;
  height: 80rpx;
  font-weight: 900;
}

.form_input input {
  padding-left: 10rpx;
  line-height: 80rpx;
  height: 80rpx;
  width: 300rpx;
  float: left;
}

.form_input button {
  width: 200rpx;
  float: right;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 60rpx;
  border: solid 2rpx #ff6500;
  color: #ff6500;
  font-weight: 300;
}

.backtologin {
  text-align: center;
  color: gray;
  font-size: 30rpx;
  bottom: 20rpx;
  position: fixed;
  width:100%;
}

.backtologin navigator {
  background-color: white;
}
