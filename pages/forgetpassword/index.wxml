<view class="container">
  <view class="userinfo">
    <block>
      <image src="{{tu}}" background-size="cover"></image>
    </block>
  </view>

  <!-- <view class="zan-panel-title">基础用法</view> -->
  <view class="zan-panel" style='width:90%'>
    <view class="form_input">
      <label>手机号</label>
      <input bindinput='inputmobile' placeholder="请输入手机号码" auto-focus/>
    </view>
    <view class="form_input">
      <label>验证码</label>
      <input bindinput='inputcheckcode' placeholder="请输入验证码" auto-focus/>
      <button bindtap='listenergetcheckcode'class="checkbtn" type="default" size="default">获取验证码</button>
    </view>
    <view class="form_input">
      <label>密码</label>
      <input bindinput='inputpassword' placeholder="请输入密码" type="password"/>
    </view>
    <view class="form_subbtn">
      <button bindtap='submit' type="default" class="subbtn" size="default" style='background-color: #FF6500;color:white;width:100%'>修改密码</button>
    </view>

  </view>
</view>